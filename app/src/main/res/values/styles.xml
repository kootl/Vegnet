    <!--自定义Base主题   Theme.AppCompat.DayNight.NoActionBar-->
    <style name="BaseAppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/BaseActivityAnimation</item>
    </style>
    <!--黑色主题-->
    <style name="BaseAppThemeNoActionBar_Black" parent="@style/BaseAppThemeNoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Black</item>
        <item name="colorAccent">@color/colorAccent_Black</item>
        <!-- <item name="android:textColorPrimary">@color/textColorPrimary_White</item>-->
    </style>
    <!--透明主题-->
    <style name="BaseAppThemeNoActionBar_Translucent" parent="@style/BaseAppThemeNoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 全屏主题-->
    <style name="FullScreenAppThemeNoActionBar" parent="@style/BaseAppThemeNoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 自定义 Dialog -->
    <style name="BaseLoadingDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!--提示框是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--对话框的背景-->
        <item name="android:windowBackground">@drawable/shape_normal_loading_bg</item>
        <!--对话框是否悬浮-->
        <item name="android:windowIsFloating">true</item>
        <!--默认Window的content背景-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否需要dialog遮罩-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--dialog遮罩透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- Activity Animation 样式 -->
    <style name="BaseActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>



<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/base_item_comm_margin"
                                    android:layout_marginRight="@dimen/base_item_comm_margin"
                                    android:layout_marginTop="@dimen/base_item_comm_margin"
                                    android:foreground="@drawable/selector_item_normal"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/base_item_comm_padding">

        <TextView
            android:id="@+id/id_tv_item_title"
            style="@style/BaseTextStylePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="表dsad dasd dasdda挺大的大叔大婶安大大打到我大城市司法打到我大城市司法阿打算打"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_item_comm_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_item_read_count"
                style="@style/BaseTextStyleSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="阅读数:120"
                />

            <LinearLayout
                android:id="@+id/id_ll_item_tag_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--   <TextView
                  android:id="@+id/id_tv_item_tag"
                  style="@style/BaseTextStyleSecondary"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="独家"
                  />-->
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_item_comm_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_tv_item_image"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginRight="@dimen/base_item_comm_margin"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/id_tv_item_image2"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginRight="@dimen/base_item_comm_margin"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/id_tv_item_image3"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="@drawable/selector_item_normal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="12dp"
        >

        <TextView
            android:id="@+id/id_tv_item_title"
            style="@style/BaseTextStylePrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            />

        <!--  android:transitionName="@string/list_detail_imageview_transition_name"-->
        <ImageView
            android:id="@+id/id_tv_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            tools:src="@mipmap/ic_launcher"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>
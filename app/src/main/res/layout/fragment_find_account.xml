<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.sunstar.vegnet.kootl.usercenter.ui.FindAccountFragment">


    <!--android:stretchColumns="1" 指定第2列填满空白-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:stretchColumns="1"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/id_tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="手机号码">
            </TextView>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/commItemBackground"
                    android:hint="请输入手机号码"
                    android:lines="1"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textSize="14dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_btn_login"
            style="@style/BaseButtonCompatRoundMy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/base_submit"
            />


    </TableLayout>


</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/id_ll_multi"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_edittext_multi"
              android:orientation="vertical"
    >

    <EditText
        android:id="@+id/id_et_input"
        style="@style/BaseTextStylePrimary"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="请输入文字描述…"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:selectAllOnFocus="true"
        />

    <TextView
        android:id="@+id/id_tv_input"
        style="@style/BaseTextStyleSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="7dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="100/100"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<!-- android:layout_marginTop="@dimen/base_item_comm_margin"-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/selector_item_normal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/base_item_comm_padding"
        android:paddingLeft="@dimen/base_item_comm_padding"
        android:paddingRight="@dimen/base_item_comm_padding"
        android:paddingTop="@dimen/base_item_comm_padding">


        <TextView
            android:id="@+id/id_tv_item_title"
            style="@style/BaseTextStyleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:lines="1"
            android:textSize="14dp"
            tools:text="XXXXX"/>

        <ImageView
            android:id="@+id/id_tv_item_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunstar.vegnet.kootl.usercenter.ui.UserLoginActivity">

    <include layout="@layout/base_toolbar_normal"/>

    <!--android:stretchColumns="1" 指定第2列填满空白-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:stretchColumns="1"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/id_tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="用户账号">
            </TextView>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/commItemBackground"
                    android:hint="请输入用户账号"
                    android:lines="1"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:text="kooer"
                    android:textSize="14dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/id_tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="用户密码">
            </TextView>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >
                <!--当padding  textSize不同设置时候
                  背景和右边的眼睛passwordToggle不对齐
                  通过反射获取TextInputLayout的mPasswordToggleView
                   然后用setTranslationY(-5f);位移来fix达到需求

                   android:padding="10dp"
                    android:textSize="14dp"
                  -->
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/commItemBackground"
                    android:hint="请输入用户密码"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:text="123456"
                    android:textSize="14dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_btn_login"
            style="@style/BaseButtonCompatRoundMy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/base_login"
            />


    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/id_tv_find_pd"
                style="@style/BaseTextStyleSecondaryColored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="找回密码"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                />

            <TextView
                android:id="@+id/id_tv_find_account"
                style="@style/BaseTextStyleSecondaryColored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="找回密码"
                />


        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_btn_reg"
            style="@style/BaseButtonCompatRoundMy"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/base_reg"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        >

        <ImageView
            android:id="@+id/id_iv_weixin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/selector_weixin_icon"
            />

        <ImageView
            android:id="@+id/id_iv_qq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/selector_qq_icon"
            />

        <ImageView
            android:id="@+id/id_iv_weibo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_weibo_icon"
            />
    </RelativeLayout>


</LinearLayout>

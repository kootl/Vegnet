<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.sunstar.vegnet.kootl.userinfo.ui.UserInfoEditActivity">

    <include layout="@layout/base_toolbar_normal"/>

    <!--android:stretchColumns="1" 指定第2列填满空白-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:stretchColumns="1"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/id_tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="电子邮箱">
            </TextView>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/commItemBackground"
                    android:hint="请输入电子邮箱"
                    android:lines="1"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textSize="14dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/id_tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="手机号码">
            </TextView>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >
                <!--当padding  textSize不同设置时候
                  背景和右边的眼睛passwordToggle不对齐
                  通过反射获取TextInputLayout的mPasswordToggleView
                   然后用setTranslationY(-5f);位移来fix达到需求

                   android:padding="10dp"
                    android:textSize="14dp"
                  -->
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/commItemBackground"
                    android:hint="请输入手机号码"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textSize="14dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/id_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="用户昵称">
            </TextView>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_til_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >
                <!--当padding  textSize不同设置时候
                  背景和右边的眼睛passwordToggle不对齐
                  通过反射获取TextInputLayout的mPasswordToggleView
                   然后用setTranslationY(-5f);位移来fix达到需求

                   android:padding="10dp"
                    android:textSize="14dp"
                  -->
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/commItemBackground"
                    android:hint="请输入用户昵称"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textSize="14dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/id_tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="详细地址">
            </TextView>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >
                <!--当padding  textSize不同设置时候
                  背景和右边的眼睛passwordToggle不对齐
                  通过反射获取TextInputLayout的mPasswordToggleView
                   然后用setTranslationY(-5f);位移来fix达到需求

                   android:padding="10dp"
                    android:textSize="14dp"
                  -->
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/commItemBackground"
                    android:hint="请输入详细地址"
                    android:padding="10dp"
                    android:selectAllOnFocus="true"
                    android:textSize="14dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/id_btn_login"
            style="@style/BaseButtonCompatRoundMy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/base_submit"
            />


    </TableLayout>


</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunstar.vegnet.kootl.feedback.FeedBackActivity">

    <include layout="@layout/base_toolbar_normal"/>

    <com.sunstar.vegnet.kootl.comm.widget.MultiEditInputView
        android:id="@+id/id_meiv_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:contentHeight="200dp"
        app:hintText="请输入您的意见或建议"
        app:maxCount="800"
        android:background="@color/editItemGrayBg"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/id_btn_submit"
        style="@style/BaseButtonCompatRoundMy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="提交"
        />
</LinearLayout>
